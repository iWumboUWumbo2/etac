use io
use conv
even(x: int) : bool {
  if (x == 0) {
    return true
  }
  else {
    return odd(x-1)
  }
}
odd(x: int) : bool {
  if (x == 1) {
    return true
  }
  else {
     return even(x-1)
  }
}
even_self(x: int) : bool {
  if (x == 0) {
    return true
  }
  else if (x == 1) {
    return false
  }
  else {
    return even_self(x-2)
  }
}
main(args: int[][]) {
  y : int;
  if (!even(8888)) {
    y = -1;
  }
  else if (!odd(7777)) {
    y = -1;
  }
  else if (!even_self(888)) {
    y = -1;
  }
  a : int = 7777;
  aeven : bool = true
  while (a >= 0) {
    if (a == 0) {
        aeven = true
    }
    else if (a == 1) {
        aeven = false
    }
    a = a - 2
  }
  if (aeven) {
    y = -1;
  }
  println(unparseInt(y));
}